// For format details, see https://aka.ms/devcontainer.json
{
	"name": "Arduino dev",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".",
		"args": {
			"VERSION": "1",
			"VARIANT": "debian-11",
			"USER_NAME": "vscode",
			"ARDUINO_CLI_VERSION": "latest", // Pin exact version if reproducibility needed
			"DIALOUT_GID": "20", // Override at build time if host dialout differs
			// Arduino platform configuration
			"PACKAGE_URL": "", // Optional: Additional board manager URLs (e.g., ESP8266, ESP32)
			"PLATFORM": "", // Optional: Additional platform to install (e.g., "esp8266:esp8266", "esp32:esp32")
			// Remote Arduino configuration
			"REMOTE_MODE": "true", // Set to "false" for local development
			"REMOTE_HOST": "localhost", // Use localhost - VS Code will forward the port
			"REMOTE_PORT": "5000" // TCP port for Arduino proxy (forwarded by VS Code)
		 }
	},

	"customizations": {
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"settings": { 
				"arduino.useArduinoCli": true,
				"arduino.path": "/usr/local/bin/arduino-cli",
				"arduino.additionalUrls": ["${containerEnv.PACKAGE_URL}"],
				"arduino.defaultBoard": "${containerEnv.PLATFORM}",
				"arduino.logLevel": "verbose"
			},
			// Set *default* container specific settings.json values on container create.
			"extensions": [
				"vscode-arduino.vscode-arduino-community",
				"yzhang.markdown-all-in-one",
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-extension-pack",
				"ms-vscode.vscode-serial-monitor"
			]
		}
	},

	// Configure setup command based on remote mode
	"postCreateCommand": "bash .devcontainer/setup-arduino.sh $([ \"$REMOTE_MODE\" = \"true\" ] && echo \"--remote --host $REMOTE_HOST --port $REMOTE_PORT\" || echo \"\")",

	// Forward Arduino proxy port from local machine to container
	"forwardPorts": [5000],
	"portsAttributes": {
		"5000": {
			"label": "Arduino Serial Proxy",
			"onAutoForward": "silent",
			"requireLocalPort": true
		}
	},

	"mounts": [
		"source=/dev,target=/dev,type=bind"
	],
	
	"runArgs": [
		"--privileged",
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined",
		"--add-host=host.docker.internal:host-gateway"
	],

	"remoteUser": "vscode"
}
